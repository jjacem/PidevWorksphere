                <VBox fx:id="listformationid" spacing="5" styleClass="formations-container">
                    <!-- Les formations seront ajoutÃ©es dynamiquement ici -->
                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
      <!-- Titre de la page -->
      <Label layoutX="500" layoutY="16.0" styleClass="title-label" text="Liste des formations" />

