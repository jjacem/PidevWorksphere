    <!-- Conteneur principal -->
    <HBox fx:id="mainContainer" alignment="CENTER" layoutX="43.0" layoutY="167.0" prefHeight="618.0" prefWidth="722.0" spacing="20" styleClass="main-card" AnchorPane.bottomAnchor="14.599999999999909" AnchorPane.leftAnchor="43.0" AnchorPane.rightAnchor="35.40000000000009" AnchorPane.topAnchor="167.0">

        <HBox alignment="CENTER_LEFT" />

