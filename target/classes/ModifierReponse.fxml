<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.ModifierReponseController"
            prefHeight="300.0" prefWidth="500.0"
            style="-fx-background-color: #e3f2fd;">

    <children>
        <VBox spacing="15" layoutX="50" layoutY="50" alignment="CENTER">
            <Label text="Modifier Réponse" style="-fx-font-size: 18px; -fx-text-fill: #0d47a1; -fx-font-weight: bold;"/>

            <TextField fx:id="messageField" promptText="Entrez votre réponse"/>
            <Label fx:id="messageError" textFill="red" visible="false" text="Le message ne peut pas être vide"/>

            <ComboBox fx:id="statusComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="En attente"/>
                        <String fx:value="Résolu"/>
                        <String fx:value="Rejeté"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Label fx:id="statusError" textFill="red" visible="false" text="Veuillez sélectionner un statut"/>

            <Button fx:id="modifyButton" text="Modifier" onAction="#handleModify" style="-fx-background-color: #0d47a1; -fx-text-fill: white;" disable="true"/>
        </VBox>
    </children>
</AnchorPane>
