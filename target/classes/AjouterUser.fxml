<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #0078D4, #00A4EF);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.AjouterUser">

   <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
      <Label text="Ajouter un Candidat" style="-fx-text-fill: white; -fx-font-weight: bold;">
         <font>
            <Font name="System" size="24.0" />
         </font>
      </Label>

      <AnchorPane style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 20;">
         <GridPane hgap="10" vgap="15" layoutX="20" layoutY="20">
            <columnConstraints>
               <ColumnConstraints prefWidth="150" />
               <ColumnConstraints prefWidth="250" />
            </columnConstraints>

            <!-- Left Column -->
            <Label text="Nom" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="PrÃ©nom" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="prenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="email" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Adresse" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="adresse" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Sexe" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <ChoiceBox fx:id="sexe" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="150.0"/>

            <Label text="Mot de passe" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="mdp" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Salaire attendu" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="salaireAttendu" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Image Profil" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="imageProfil" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Button GridPane.rowIndex="8" GridPane.columnIndex="1" mnemonicParsing="false"
                    onAction="#ajoutercandidat" text="Ajouter"
                    style="-fx-background-color: #0078D4; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-background-radius: 5; -fx-padding: 8 15;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </GridPane>

         <ImageView fx:id="imagePreview" fitHeight="200.0" fitWidth="200.0" layoutX="500" layoutY="20"
                    style="-fx-border-color: #0078D4; -fx-border-width: 2; -fx-border-radius: 5;"
                    pickOnBounds="true" preserveRatio="true" />
      </AnchorPane>
   </VBox>
</AnchorPane>
