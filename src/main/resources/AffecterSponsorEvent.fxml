<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.AffectationSponsorEvent"
            style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
    <!-- Zone centrale pour les éléments principaux -->
    <center>
        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;">
            <ComboBox fx:id="eventComboBox" promptText="Choisir un événement"
                      style="-fx-pref-width: 250; -fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-background-radius: 4;"/>
            <ComboBox fx:id="sponsorComboBox" promptText="Choisir un sponsor"
                      style="-fx-pref-width: 250; -fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-background-radius: 4;"/>
            <Button text="Associer" onAction="#associerEvenementASponsor"
                    style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 4;"/>
        </VBox>
    </center>
    <!-- Bouton Retour positionné en bas à droite -->
    <bottom>
        <Button fx:id="RetourBtnaListSponsor" text="Retour" mnemonicParsing="false" onAction="#backbtn"
                prefHeight="40.0" prefWidth="120.0"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 4;"
                BorderPane.alignment="CENTER_RIGHT"/>
    </bottom>
</BorderPane>
