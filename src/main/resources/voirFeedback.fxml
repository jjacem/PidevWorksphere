<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="esprit.tn.controllers.voirFeedbackController"
           stylesheets="@voirFeedback.css">

    <VBox spacing="20" alignment="CENTER" prefWidth="600" prefHeight="400"
          styleClass="vbox">

        <!-- Close Button in Top-Right Corner -->
        <StackPane alignment="TOP_RIGHT">
            <Button onAction="#fermerFenetre"
                    styleClass="close-button">
                <graphic>
                    <Label text="X" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </graphic>
            </Button>
        </StackPane>

        <!-- Title -->
        <Label text="DÃ©tails du Feedback" styleClass="title-label"/>

        <!-- Feedback Message -->
        <TextArea fx:id="lblMessage" editable="false" wrapText="true"
                  prefHeight="120" prefWidth="500"
                  styleClass="text-area"/>

        <!-- Rating Section -->
        <HBox spacing="10" alignment="CENTER" styleClass="rating-section">
            <Label text="Note: " styleClass="rating-label"/>
            <HBox fx:id="starContainer" spacing="5" styleClass="star-container"/>
            <!-- Added Label for Note Value -->
            <Label fx:id="lblNoteValue" styleClass="note-value-label"/>
        </HBox>

        <!-- Date Label -->
        <Label fx:id="lblDate" styleClass="date-label"/>

        <!-- Buttons at the Bottom -->
        <HBox spacing="20" alignment="CENTER" style="-fx-padding-top: 20px;">
            <!-- Supprimer Button -->
            <Button text="Supprimer" onAction="#supprimerFeedback"
                    styleClass="button delete-button"/>
        </HBox>

    </VBox>

</StackPane>