<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="677.0" prefWidth="891.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterEvenementController">
   <children>
      <!-- Titre de la page -->
      <Text layoutX="231.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 24px; -fx-fill: #0086b3;" text="Ajouter événement" />

      <!-- Champ Nom de l'événement -->
      <Label layoutX="75.0" layoutY="68.0" text="Nom de l'événement :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="nomEventTextField" layoutX="273.0" layoutY="60.0" prefHeight="35.0" prefWidth="300.0" promptText="Nom de l'événement" />
      <Label fx:id="nomEventErrorLabel" layoutX="135.0" layoutY="90.0" textFill="red" visible="false" />

      <!-- Champ Description -->
      <Label layoutX="75.0" layoutY="102.0" text="Description :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="descEventTextArea" layoutX="273.0" layoutY="102.0" prefHeight="71.0" prefWidth="300.0" promptText="Description de l'événement" />
      <Label fx:id="descEventErrorLabel" layoutX="139.0" layoutY="185.0" textFill="red" visible="false" />

      <!-- Champ Date de l'événement -->
      <Label layoutX="76.0" layoutY="194.0" text="Date de l'événement :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <DatePicker fx:id="datePicker" layoutX="273.0" layoutY="186.0" prefHeight="35.0" prefWidth="300.0" />
      <Label fx:id="dateEventErrorLabel" layoutX="138.0" layoutY="225.0" textFill="red" visible="false" />

      <!-- Champ Heure de l'événement -->
      <Label layoutX="78.0" layoutY="239.0" text="Heure de l'événement :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="timeTextField" layoutX="273.0" layoutY="231.0" prefHeight="35.0" prefWidth="300.0" promptText="Heure de l'événement" />
      <Label fx:id="timeEventErrorLabel" layoutX="138.0" layoutY="260.0" textFill="red" visible="false" />

      <!-- Champ Lieu de l'événement -->
      <Label layoutX="78.0" layoutY="283.0" text="Lieu de l'événement :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="lieuEventTextField" layoutX="273.0" layoutY="275.0" prefHeight="35.0" prefWidth="300.0" promptText="Lieu de l'événement" />
      <Label fx:id="lieuEventErrorLabel" layoutX="139.0" layoutY="295.0" textFill="red" visible="false" />

      <!-- Champ Capacité -->
      <Label layoutX="78.0" layoutY="324.0" text="Capacité :" textFill="#0086b3">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="capaciteEventTextField" layoutX="273.0" layoutY="316.0" prefHeight="35.0" prefWidth="300.0" promptText="Capacité de l'événement" />
      <Label fx:id="capaciteEventErrorLabel" layoutX="138.0" layoutY="325.0" textFill="red" visible="false" />

      <!-- Bouton Ajouter -->

      <Button fx:id="ajouterbtn" layoutX="78.0" layoutY="412.0" mnemonicParsing="false" onAction="#ajouterEvenement" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #0086b3; -fx-text-fill: white;" text="Ajouter evenement" />
      <!-- Bouton retour -->
      <Button fx:id="RetourBtnaListEvent" layoutX="668.0" layoutY="22.0" mnemonicParsing="false" onAction="#RetourListEvenement" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: black; -fx-text-fill: white;" text="Retour" />
   </children>
</AnchorPane>
