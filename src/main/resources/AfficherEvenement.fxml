<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="698.0" prefWidth="940.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherEvenementController">

    <children>
        <!-- Liste des événements -->
        <ListView fx:id="lv_event" layoutX="10.0" layoutY="150.0" prefHeight="230.0" prefWidth="580.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="150.0" />

        <!-- Titre -->
        <Label layoutX="14.0" layoutY="110.0" text="Liste des événements" textFill="#0086b3" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="110.0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Bouton Ajouter -->

        <Button fx:id="btnAjouterEvent" layoutX="420.0" layoutY="100.0" onAction="#OnajouterEvent" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #000000;" text="Ajouter Événement" textFill="WHITE" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="100.0" />



        <!-- Barre de recherche -->
        <HBox layoutX="0.0" layoutY="10.0" prefHeight="50.0" prefWidth="600.0" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <TextField fx:id="txtRechercheEvent" prefHeight="30.0" prefWidth="400.0" promptText="Rechercher..." />
                <Button fx:id="btnRechercheEvent" onAction="#OnchercherEvent" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #0086b3; -fx-text-fill: white;" text="Rechercher" />
            </children>
            <padding>
                <Insets left="50.0" top="10.0" />
            </padding>
        </HBox>
        <Button fx:id="btnretourdashRH" layoutX="811.0" layoutY="38.0" mnemonicParsing="false" style="-fx-font-size: 24px; -fx-fill: black;" text="Retour dashboard" onAction="#retourdashRH"/>
    </children>
</AnchorPane>
