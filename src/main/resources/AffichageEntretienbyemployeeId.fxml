<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AffichageEntretienbyemployeeId"
            style="-fx-background-color: #F5F5F5;">

    <!-- 🔹 Header -->
    <top>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
            <Label text="Liste des Entretiens"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <!-- Search Bar with Emoji -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10px;">
                <Label text="🔍" style="-fx-font-size: 18px;"/> <!-- Emoji as a label -->
                <TextField fx:id="searchField" promptText="🔍 Rechercher un entretien..."
                           style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 25px;
                                  -fx-background-radius: 25px; -fx-border-color: black;
                                  -fx-background-color: white; -fx-pref-width: 400px;"/>
            </HBox>
        </VBox>
    </top>

    <!-- 🔹 Main Content -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20px;">
            <ListView fx:id="lv_entretien"
                      prefHeight="400.0" prefWidth="900.0"
                      style="-fx-border-color: #D1D1D1; -fx-border-radius: 10px;
                             -fx-background-radius: 10px; -fx-padding: 10px;
                             -fx-background-color: white;"/>
        </VBox>
    </center>



</BorderPane>
