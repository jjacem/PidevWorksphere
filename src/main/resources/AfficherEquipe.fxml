<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" stylesheets="@AfficherEquipe.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherEquipeController">

    <!-- Conteneur principal -->
    <HBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" styleClass="main-card">
        <!-- Contenu principal avec la liste des équipes -->
        <VBox alignment="CENTER" spacing="20" styleClass="card" HBox.hgrow="ALWAYS">
            <!-- Titre de la page -->
            <Label styleClass="title-label" text="Liste des équipes" />

            <!-- Conteneur pour la barre de recherche et les boutons -->
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="button-search-container">
                <!-- Barre de recherche -->
                <TextField fx:id="searchField" onKeyReleased="#rechercherEquipe" promptText="Rechercher une équipe..." styleClass="search-field" />

                <!-- Bouton Ajouter une équipe -->
                <Button onAction="#redirectToAjouterEquipe" styleClass="button-ajouter" text="Ajouter une équipe" />

                <!-- Bouton Supprimer tout -->
                <Button onAction="#supprimerToutesEquipes" text="Supprimer tout" styleClass="supprimer-tout-button" />
            </HBox>

            <!-- ScrollPane pour la liste des équipes -->
            <!-- ScrollPane pour la liste des équipes -->
            <ScrollPane fitToHeight="true" fitToWidth="true" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <VBox fx:id="equipesContainer" spacing="5" styleClass="equipes-container">
                    <!-- Les équipes seront ajoutées dynamiquement ici -->
                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
</AnchorPane>