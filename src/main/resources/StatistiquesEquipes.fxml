<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.StatistiquesEquipesController">
    <Label text="Statistiques des Équipes" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <HBox spacing="20">
        <VBox>
            <Label text="Répartition des membres par équipe"/>
            <PieChart fx:id="pieChartMembres"/>
        </VBox>
        <VBox>
            <Label text="Nombre de projets par équipe"/>
            <BarChart fx:id="barChartProjets"/>
        </VBox>
    </HBox>
</VBox>