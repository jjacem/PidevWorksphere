<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="703.0" prefWidth="942.0" style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.AfficherSponsorController">
    <stylesheets>
        <URL value="@AfficherSponsor.css" />
    </stylesheets>

    <!-- Contenu de l'interface -->
    <children>
        <!-- Liste des sponsors -->
        <ListView fx:id="lv_sponsor" layoutX="10.0" layoutY="150.0" prefHeight="400.0"
                  prefWidth="800.0" AnchorPane.bottomAnchor="10.0"
                  AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="150.0" />

        <!-- Titre -->
        <Label layoutX="22.0" layoutY="6.0" text="Liste des sponsors" textFill="#0086b3" AnchorPane.leftAnchor="22.0" AnchorPane.topAnchor="6.0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Barre de recherche -->
        <HBox layoutX="10.0" layoutY="35.0" prefHeight="50.0" prefWidth="600.0" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.799999999999955" AnchorPane.topAnchor="35.0">
            <children>
                <TextField fx:id="txtRechercheSponso" prefHeight="30.0" prefWidth="400.0" promptText="Rechercher..." styleClass="search-field" />
                <Button fx:id="btnRechercheSponsor" onAction="#OnchercherSponsor" prefHeight="30.0" prefWidth="100.0" styleClass="search-button" text="Rechercher" />
                <Button fx:id="btnResetFilter" maxWidth="130.0" minWidth="106.0" prefHeight="32.0" prefWidth="106.0" text="Réinitialiser" />
            </children>
            <padding>
                <Insets left="50.0" top="10.0" />
            </padding>
        </HBox>



        <HBox layoutX="10.0" layoutY="86.0" prefHeight="50.0" prefWidth="600.0" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.799999999999955" AnchorPane.topAnchor="86.0" alignment="CENTER_RIGHT">
            <children>
                <!-- ComboBox pour le filtrage par budget -->
                <ComboBox fx:id="cbBudgetFilter" prefWidth="200.0" promptText="Filtrer par budget" />
                <Button fx:id="btnAjouterSponsor" onAction="#Onajoutersponso" prefHeight="31.0" prefWidth="120.0" styleClass="add-button" text="➕ Ajouter" />
            </children>
            <padding>
                <Insets left="50.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
