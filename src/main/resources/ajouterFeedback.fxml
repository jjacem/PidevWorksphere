<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #4a90e2, #6a11cb);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterFeedbackController">

    <children>
        <VBox alignment="CENTER" layoutX="41.0" layoutY="20.0" prefHeight="480.0" prefWidth="530.0" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; ">

            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Ajouter un Feedback" />

            <!-- Message Input -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Message :" />
                <TextArea fx:id="tf_message" promptText="Entrez votre feedback" style="-fx-pref-width: 300px; -fx-pref-height: 80px; -fx-font-size: 14px; -fx-background-radius: 5;" />
            </HBox>

            <!-- Quiz Section -->
            <VBox spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="📝 Évaluation de l'entretien" />

                <!-- Question 1 -->
                <Label text="1. L'évaluateur était-il clair ?" />
                <HBox spacing="10">
                    <RadioButton text="Pas du tout" fx:id="q1_r1" userData="0"/>
                    <RadioButton text="Moyen" fx:id="q1_r2" userData="1"/>
                    <RadioButton text="Bien" fx:id="q1_r3" userData="2"/>
                </HBox>

                <!-- Question 2 -->
                <Label text="2. L'entretien était-il structuré ?" />
                <HBox spacing="10">
                    <RadioButton text="Pas du tout" fx:id="q2_r1" userData="0"/>
                    <RadioButton text="Moyen" fx:id="q2_r2" userData="1"/>
                    <RadioButton text="Bien" fx:id="q2_r3" userData="2"/>
                </HBox>

                <!-- Question 3 -->
                <Label text="3. L'évaluateur a-t-il répondu à vos questions ?" />
                <HBox spacing="10">
                    <RadioButton text="Pas du tout" fx:id="q3_r1" userData="0"/>
                    <RadioButton text="Moyen" fx:id="q3_r2" userData="1"/>
                    <RadioButton text="Bien" fx:id="q3_r3" userData="2"/>
                </HBox>

                <!-- Question 4 -->
                <Label text="4. Recommanderiez-vous cet entretien ?" />
                <HBox spacing="10">
                    <RadioButton text="Pas du tout" fx:id="q4_r1" userData="0"/>
                    <RadioButton text="Moyen" fx:id="q4_r2" userData="1"/>
                    <RadioButton text="Bien" fx:id="q4_r3" userData="2"/>
                </HBox>
            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnAjouterFeedback" onAction="#ajouterFeedback" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Ajouter Feedback" />
                <Button onAction="#fermerFenetre" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Annuler" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
