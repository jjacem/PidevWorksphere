<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #e3f2fd, #bbdefb);"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.tn.controllers.FaceAuthController">
    <!-- Padding to give breathing room -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Camera View with Shadow -->
    <ImageView fx:id="cameraView" fitWidth="400" fitHeight="300" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.2, 0, 2);"/>

    <!-- Styled Button -->
    <Button text="Retourner" onAction="#retourner" styleClass="custom-button"
            style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;"/>

    <!-- Link to CSS -->
    <stylesheets>
        <URL value="@faceauth.css" />
    </stylesheets>
</VBox>