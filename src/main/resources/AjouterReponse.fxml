<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.AjouterReponseController"
            prefHeight="300.0" prefWidth="500.0"
            style="-fx-background-color: #E3F2FD;">

    <VBox spacing="15.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Message:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextArea fx:id="txtMessage" prefHeight="150.0"
                  promptText="Écrivez votre réponse ici..."
                  style="-fx-border-color: #42A5F5; -fx-border-radius: 5; -fx-padding: 5;"/>

        <Button fx:id="btnAjouter" text="Ajouter Réponse"
                onAction="#ajouterReponse"
                style="-fx-background-color: #42A5F5; -fx-text-fill: white; -fx-font-weight: bold;"
                disable="true"/>
    </VBox>
</AnchorPane>
