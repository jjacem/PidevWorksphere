<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.ForgotpasswordController"
            fx:id="rootPane"
            prefHeight="600.0" prefWidth="1100.0">

    <!-- Main Container -->
    <VBox fx:id="mainContainer" spacing="20" alignment="CENTER"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Réinitialiser Votre Mot de Passe" fx:id="titleLabel"/>
        <TextField fx:id="mail" promptText="Entrez votre email"/>
        <Button fx:id="sendMailButton" text="Envoyer le Code" onAction="#onSendMail"/>

        <!-- Verification Code Box -->
        <VBox fx:id="verificationBox" spacing="15" alignment="CENTER" visible="false">
            <Label text="Vérification du Code" fx:id="verifyLabel"/>
            <TextField fx:id="verificationCodeField" promptText="ex., 123456"/>
            <Button fx:id="verifyCodeButton" text="Vérifier" onAction="#onVerifyCode"/>
        </VBox>

        <!-- Reset Password Box -->
        <VBox fx:id="resetPasswordBox" spacing="15" alignment="CENTER" visible="false">
            <Label text="Nouveau Mot de Passe" fx:id="resetLabel"/>
            <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe"/>
            <Label text="Confirmer le Mot de Passe" fx:id="confirmLabel"/>
            <PasswordField fx:id="repeatPasswordField" promptText="Répéter le mot de passe"/>
            <Button fx:id="resetPasswordButton" text="Réinitialiser" onAction="#onResetPassword"/>
        </VBox>
    </VBox>

    <!-- Return Button (moved after VBox to ensure it’s on top) -->
    <Button fx:id="returnButton" text="Retour" onAction="#onReturn"
            style="-fx-background-color: #6B7280; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 8; -fx-cursor: hand;"
            AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" />

    <stylesheets>
        <URL value="@forget.css"/>
    </stylesheets>
</AnchorPane>