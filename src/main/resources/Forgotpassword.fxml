<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.ForgotpasswordController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <VBox spacing="15" alignment="CENTER">
        <Label text="Forgot Password?" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="mail" promptText="Enter your email" style="-fx-pref-width: 250px;"/>
        <Button text="Send Verification Code" onAction="#onSendMail"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
        />

        <!-- Verification Code Box -->
        <VBox fx:id="verificationBox" spacing="10" alignment="CENTER" visible="false">
            <Label text="Enter Verification Code:"/>
            <TextField fx:id="verificationCodeField" promptText="123456" style="-fx-pref-width: 200px;"/>
            <Button text="Verify Code" onAction="#onVerifyCode"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"
            />
        </VBox>

        <!-- Reset Password Box -->
        <VBox fx:id="resetPasswordBox" spacing="10" alignment="CENTER" visible="false">
            <Label text="Enter New Password:"/>
            <PasswordField fx:id="newPasswordField" promptText="New Password" style="-fx-pref-width: 200px;"/>
            <Label text="Repeat New Password:"/>
            <PasswordField fx:id="repeatPasswordField" promptText="Confirm Password" style="-fx-pref-width: 200px;"/>
            <Button text="Reset Password" onAction="#onResetPassword"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"></Button>

        </VBox>
    </VBox>

</AnchorPane>