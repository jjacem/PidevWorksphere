<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.Region?>
<BorderPane stylesheets="@AffichageEntretien.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AffichageEntretineController">

    <!-- 🔹 Header -->
    <top>
        <VBox id="header" alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- HBox to hold the left, middle, and right ImageView elements -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 0 20;">
                <!-- Left ImageView -->
                <ImageView fitHeight="100" fitWidth="150" preserveRatio="true">
                    <Image url="@/Images/490748-PH5A0U-472-removebg-preview.png" /> <!-- Replace with your left image path -->
                </ImageView>

                <!-- Middle ImageView -->
                <Region HBox.hgrow="ALWAYS" /> <!-- Spacer to push the middle image to the center -->
                <ImageView fitHeight="100" fitWidth="150" preserveRatio="true">
                    <Image url="@/icons/recrutement-removebg-preview.png" /> <!-- Replace with your middle image path -->
                </ImageView>

                <!-- Right ImageView -->
                <Region HBox.hgrow="ALWAYS" /> <!-- Spacer to push the right image to the right -->
                <ImageView fitHeight="100" fitWidth="150" preserveRatio="true">
                    <Image url="@/Images/4906435-removebg-preview.png" /> <!-- Replace with your right image path -->
                </ImageView>
            </HBox>

            <!-- Title Label with smaller font -->
            <Label id="titleLabel" text="Liste des Entretiens" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Search Container with reduced spacing -->
            <HBox id="searchContainer" alignment="CENTER" spacing="5">
                <TextField fx:id="searchField" promptText="🔍 Rechercher un entretien..." style="-fx-pref-width: 250px;" />
            </HBox>

            <HBox id="dateFiltersContainer" alignment="CENTER_LEFT" spacing="10">
                <!-- Label for Date Début -->
                <Label text="Date Début:" textFill="#da0d0d">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>

                <!-- DatePicker for Date Début -->
                <DatePicker fx:id="dateDebutPicker" />

                <!-- Label for Date Fin -->
                <Label text="Date Fin:" textFill="#da0d0d">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>

                <!-- DatePicker for Date Fin -->
                <DatePicker fx:id="dateFinPicker" />

                <!-- Filter Button -->
                <Button fx:id="filterButton" onAction="#filterByDate" text="Filtrer" />
            </HBox>


        </VBox>
    </top>

    <!-- 🔹 Main Content -->
    <center>
        <VBox id="mainContent" alignment="CENTER" spacing="20">
            <ListView fx:id="lv_entretien" prefHeight="900" prefWidth="929.0" />
        </VBox>
    </center>

    <bottom>
        <HBox id="footer" alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button fx:id="btn_ajouter" onAction="#ajouterEntretien" text="Ajouter un Entretien" style="-fx-font-size: 12px; -fx-padding: 5 10;" HBox.hgrow="ALWAYS" />

            <!-- Spacer to push the buttons apart -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Button on the right -->
            <Button fx:id="btn_voir_historique" onAction="#voirHistorique" text="Voir Historique" style="-fx-font-size: 12px; -fx-padding: 5 10;" HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>

</BorderPane>