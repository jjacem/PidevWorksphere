<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@AffichageEntretien.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AffichageEntretineController">

    <!-- 🔹 Header -->
    <top>
        <VBox id="header" alignment="CENTER" spacing="15">
            <Label id="titleLabel" text="Liste des Entretiens" />
            <HBox id="searchContainer" alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" promptText="🔍 Rechercher un entretien..." />
            </HBox>

            <HBox id="dateFiltersContainer" alignment="CENTER" spacing="10">
                <Label text="Date Début:" textFill="#da0d0d">
               <font>
                  <Font size="13.0" />
               </font></Label>
                <DatePicker fx:id="dateDebutPicker" />
                <Label text="Date Fin:" textFill="#da0d0d" />
                <DatePicker fx:id="dateFinPicker" />
                <Button fx:id="filterButton" onAction="#filterByDate" text="Filtrer" />
            </HBox>
        </VBox>
    </top>

    <!-- 🔹 Main Content -->
    <center>
        <VBox id="mainContent" alignment="CENTER" spacing="20">
            <ListView fx:id="lv_entretien" prefHeight="900" prefWidth="929.0" />
        </VBox>
    </center>

    <!-- 🔹 Footer -->
    <bottom>
        <StackPane id="footer" alignment="CENTER">
            <Button fx:id="btn_ajouter" onAction="#ajouterEntretien" text="➕ Ajouter un Entretien" />
        </StackPane>
    </bottom>

</BorderPane>
