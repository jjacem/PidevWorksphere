<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1300.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherOffreController">
   <children>
      <!-- Sidebar agrandie -->
      <AnchorPane layoutX="1140.0" prefHeight="800.0" prefWidth="158.0" style="-fx-background-color: #0086b3; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
         <children>
            <Button layoutX="13.0" layoutY="212.0" mnemonicParsing="false" onAction="#goToModifierOffre" prefHeight="35.0" prefWidth="134.0" style="-fx-background-color: #006699; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 14px;" text="MODIFIER" />
            <Button layoutX="13.0" layoutY="271.0" mnemonicParsing="false" onAction="#SupprimerOffre" prefHeight="35.0" prefWidth="134.0" style="-fx-background-color: #006699; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 14px;" text="SUPPRIMER" />
            <Button layoutX="13.0" layoutY="150.0" mnemonicParsing="false" onAction="#goToAjouterOffre" prefHeight="35.0" prefWidth="134.0" style="-fx-background-color: #006699; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 14px;" text="AJOUTER" />
            <Button layoutX="13.0" layoutY="329.0" mnemonicParsing="false" onAction="#viewCandidatures" prefHeight="35.0" prefWidth="133.0" style="-fx-background-color: #006699; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 14px;" text="Candidatures" />
            <Button layoutX="15.0" layoutY="571.0" mnemonicParsing="false" onAction="#retourdashRH" prefHeight="40.0" prefWidth="134.0" style="-fx-background-color: #004d66; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;" text="DASHBOARD" />
         </children>
      </AnchorPane>

      <!-- Logo section -->
      <ImageView fitHeight="97.0" fitWidth="140.0" layoutX="1150.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/offre-demploi-visuel-2-removebg-preview.png" />
         </image>
      </ImageView>

      <!-- Search Bar and Sort Options agrandis -->
      <HBox layoutX="160.0" layoutY="30.0" spacing="20.0" />

      <!-- Agrandir la ListView -->
      <ListView fx:id="lv_offre" layoutX="20.0" layoutY="104.0" prefHeight="654.0" prefWidth="1100.0" style="-fx-border-color: #0086b3; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" />

      <!-- Decorative blue lines -->
      <AnchorPane layoutX="20.0" layoutY="25.0" prefHeight="7.0" prefWidth="400.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <AnchorPane layoutX="20.0" layoutY="38.0" prefHeight="7.0" prefWidth="350.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <AnchorPane layoutX="20.0" layoutY="51.0" prefHeight="7.0" prefWidth="300.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <AnchorPane layoutX="20.0" layoutY="63.0" prefHeight="7.0" prefWidth="250.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <TextField fx:id="searchField" layoutX="442.0" layoutY="36.0" prefHeight="40.0" prefWidth="445.0" promptText="Rechercher une offre..." style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5;">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <ComboBox fx:id="sortComboBox" layoutX="900.0" layoutY="35.0" prefHeight="40.0" prefWidth="220.0" promptText="Trier par date" style="-fx-background-radius: 5; -fx-border-color: #cccccc;" />
      <AnchorPane layoutX="20.0" layoutY="75.0" prefHeight="7.0" prefWidth="200.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <AnchorPane layoutX="20.0" layoutY="12.0" prefHeight="7.0" prefWidth="700.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
      <AnchorPane layoutX="20.0" layoutY="87.0" prefHeight="7.0" prefWidth="140.0" style="-fx-background-color: #0086b3; -fx-background-radius: 5;" />
   </children>
</AnchorPane>
