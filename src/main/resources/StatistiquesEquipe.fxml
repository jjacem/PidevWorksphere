<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.chart.PieChart?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.StatistiquesEquipeController">
    <Label text="Statistiques des Équipes" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <HBox spacing="20">
        <VBox spacing="10">
            <Label text="Membres par Équipe" />
            <!-- BarChart avec ses axes -->
            <BarChart fx:id="membresChart">
                <xAxis>
                    <CategoryAxis label="Équipes" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre de membres" />
                </yAxis>
            </BarChart>
        </VBox>
        <VBox spacing="10">
            <Label text="Projets par Équipe" />
            <PieChart fx:id="projetsChart" />
        </VBox>
    </HBox>
    <VBox spacing="10" fx:id="tempsMoyenContainer">
        <Label text="Temps Moyen de Réalisation des Projets" />
        <!-- Les labels pour chaque équipe seront ajoutés dynamiquement ici -->
    </VBox>
</VBox>