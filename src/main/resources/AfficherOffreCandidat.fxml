<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="475.0" prefWidth="685.0" stylesheets="AfficherOffreCandidat.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherOffreCandidatController">
   <children>
      <AnchorPane layoutX="597.0" prefHeight="484.0" prefWidth="125.0" style="-fx-background-color: #0086b3;">
         <children>
            <Button fx:id="Postuler" layoutX="11.0" layoutY="199.0" mnemonicParsing="false" onAction="#postulerOffre" prefHeight="26.0" prefWidth="102.0" text="POSTULER" />
            <Button fx:id="voirCandidatures" layoutX="11.0" layoutY="242.0" mnemonicParsing="false" onAction="#voirCandidatures" prefHeight="26.0" prefWidth="102.0" text="CANDIDATURES" />
            <ImageView fx:id="bookmarkIcon" fitHeight="32.0" fitWidth="32.0" layoutX="46.0" layoutY="151.0" onMouseClicked="#toggleBookmark" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/Images/notSaved.png" />
               </image>
            </ImageView>
            <Button fx:id="voirFavorisBtn" layoutX="11.0" layoutY="287.0" mnemonicParsing="false" onAction="#voirFavoris" prefHeight="26.0" prefWidth="102.0" text="MES FAVORIS" />
            <ImageView fitHeight="90.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/Images/474188139_2099437073823213_5214087864459817142_n.png" />
               </image>
            </ImageView>
            <!-- Add analyze and translate buttons -->
            <Button fx:id="analyzeButton" layoutX="12.0" layoutY="423.0" mnemonicParsing="false" onAction="#analyzeOffre" prefHeight="26.0" prefWidth="102.0" text="📝 ANALYZE" />
            <Button fx:id="translateButton" layoutX="12.0" layoutY="384.0" mnemonicParsing="false" onAction="#translateOffre" prefHeight="26.0" prefWidth="102.0" text="🌐 TRANSLATE" />
            <!-- Add notification button with counter -->
            <StackPane layoutX="15.0" layoutY="330.0">
               <children>
                  <Button fx:id="notificationsButton" mnemonicParsing="false" onAction="#showNotifications" prefHeight="35.0" prefWidth="100.0" text="🔔 NOTIFICATIONS" />
                  <Label fx:id="notificationCountLabel" alignment="CENTER" style="-fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 2 6;" text="0" translateX="30.0" translateY="-10.0" visible="false" />
               </children>
            </StackPane>
         </children>
      </AnchorPane>
      <ImageView fitHeight="70.0" fitWidth="112.0" layoutX="5.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/offre-demploi-visuel-2-removebg-preview.png" />
         </image>
      </ImageView>
      <ListView fx:id="lv_offre" layoutX="20.0" layoutY="88.0" prefHeight="374.0" prefWidth="559.0" />
      <AnchorPane layoutX="280.0" layoutY="44.0" prefHeight="5.0" prefWidth="300.0" style="-fx-background-color: #0086b3;" />
      <AnchorPane layoutX="329.0" layoutY="54.0" prefHeight="5.0" prefWidth="250.0" style="-fx-background-color: #0086b3;" />
      <AnchorPane layoutX="380.0" layoutY="64.0" prefHeight="5.0" prefWidth="200.0" style="-fx-background-color: #0086b3;" />
      <AnchorPane layoutX="430.0" layoutY="74.0" prefHeight="5.0" prefWidth="150.0" style="-fx-background-color: #0086b3;" />
      
      <!-- Search and sort container -->
      <HBox layoutX="140.0" layoutY="10.0" spacing="10.0">
         <children>
            <TextField fx:id="searchField" prefHeight="26.0" prefWidth="300.0" promptText="Rechercher une offre..." />
            <ComboBox fx:id="sortComboBox" prefHeight="26.0" prefWidth="130.0" promptText="Trier par date" />
         </children>
      </HBox>
   </children>
</AnchorPane>
