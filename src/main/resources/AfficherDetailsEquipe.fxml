<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.AfficherDetailsEquipeController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@stylesEquipe.css">

    <!-- Conteneur principal centré avec un fond blanc et une bordure arrondie -->
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" styleClass="main-card">
        <!-- Bouton Retour bien positionné dans le cadre blanc -->
        <HBox alignment="CENTER_LEFT">
            <Button text="← Retour" onAction="#retour" styleClass="button-back" />
        </HBox>

        <!-- Nom de l'équipe avec un style plus grand et bleu -->
        <Label fx:id="nomEquipeLabel" styleClass="label-title" />

        <!-- Barre de recherche -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rechercher un membre:" styleClass="label-text" />
            <TextField fx:id="rechercheField" promptText="Nom ou prénom" prefWidth="300" onKeyReleased="#rechercherEmployee" />
        </HBox>

        <!-- Liste des membres de l'équipe -->
        <VBox fx:id="membresContainer" spacing="10" styleClass="members-container">
            <!-- Les membres seront ajoutés dynamiquement ici -->
        </VBox>
    </VBox>
</AnchorPane>