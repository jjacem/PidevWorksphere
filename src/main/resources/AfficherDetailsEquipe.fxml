<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@stylesEquipe.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherDetailsEquipeController">

    <!-- Conteneur principal centré avec un fond blanc et une bordure arrondie -->
    <VBox alignment="CENTER" layoutX="8.0" prefHeight="500.0" prefWidth="779.0" spacing="20" styleClass="main-card" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="0.0">

        <!-- HBox contenant l'image de l'équipe et QR code à droite -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <!-- Image de l'équipe -->
            <ImageView fx:id="imageEquipeView" fitHeight="120" fitWidth="120" styleClass="image-equipe">
                <clip>
                    <Circle centerX="60" centerY="60" radius="60" />
                </clip>
            </ImageView>

            <!-- QR Code à droite de l'image de l'équipe -->
            <ImageView fx:id="qrCodeImageView" fitHeight="109.0" fitWidth="107.0" styleClass="qr-code-image" />
        </HBox>

        <!-- Nom de l'équipe avec un style plus grand et noir -->
        <Label fx:id="nomEquipeLabel" styleClass="label-title" />

        <!-- Barre de recherche -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="label-text" text="Rechercher un membre:" />
            <TextField fx:id="rechercheField" onKeyReleased="#rechercherEmployee" prefWidth="300" promptText="Nom ou prénom" styleClass="search-field" />
        </HBox>

        <!-- ScrollPane pour la liste des membres -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="membresContainer" prefHeight="146.0" prefWidth="700.0" spacing="15" styleClass="members-container">
                <!-- Les membres seront ajoutés dynamiquement ici -->
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>
