<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="590.0" prefWidth="810.0" stylesheets="@stylesEquipe.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherDetailsEquipeController">

    <!-- Conteneur principal centré avec un fond blanc et une bordure arrondie -->
    <VBox alignment="CENTER" layoutX="18.0" layoutY="14.0" prefHeight="573.0" prefWidth="784.0" spacing="20" styleClass="main-card" AnchorPane.bottomAnchor="13.0" AnchorPane.leftAnchor="18.0" AnchorPane.rightAnchor="21.0" AnchorPane.topAnchor="14.0">

        <!-- HBox pour centrer l'image de l'équipe -->
        <HBox alignment="CENTER" spacing="20">
            <!-- Image de l'équipe -->
            <ImageView fx:id="imageEquipeView" fitHeight="120" fitWidth="120" styleClass="image-equipe">
                <clip>
                    <Circle centerX="60" centerY="60" radius="60" />
                </clip>
            </ImageView>
        </HBox>

        <!-- Nom de l'équipe avec un style plus grand et noir -->
        <Label fx:id="nomEquipeLabel" styleClass="label-title" />

        <!-- Barre de recherche -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="label-text" text="Rechercher un membre:" />
            <TextField fx:id="rechercheField" onKeyReleased="#rechercherEmployee" prefWidth="300" promptText="Nom ou prénom" styleClass="search-field" />
        </HBox>

        <!-- ScrollPane pour la liste des membres -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="membresContainer" prefHeight="262.0" prefWidth="718.0" spacing="15" styleClass="members-container">
                <!-- Les membres seront ajoutés dynamiquement ici -->
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>
