<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterEquipeController">

    <!-- Carte blanche pour le formulaire -->
    <VBox alignment="CENTER" layoutX="172.0" layoutY="69.0" prefHeight="472.0" prefWidth="386.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" AnchorPane.bottomAnchor="138.0" AnchorPane.leftAnchor="172.0" AnchorPane.rightAnchor="142.0" AnchorPane.topAnchor="69.0">
        <!-- Titre de la fenêtre -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0086b3;" text="Ajouter une nouvelle équipe" />

        <!-- Champ pour le nom de l'équipe -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Nom de l'équipe:" />
            <TextField fx:id="nomEquipeField" prefHeight="29.0" prefWidth="400.0" promptText="Entrez le nom de l'équipe" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px; -fx-padding: 5;" />
        </VBox>

        <!-- Champ pour l'image de l'équipe -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Image de l'équipe:" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="uploadImageButton" onAction="#uploadImage" style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Choisir une image" />
                <ImageView fx:id="imagePreview" fitHeight="100" fitWidth="100" style="-fx-border-color: #0086b3; -fx-border-width: 1px; -fx-border-radius: 5;" />
            </HBox>
        </VBox>

        <!-- Conteneur pour les ListView et les boutons -->
        <HBox alignment="CENTER" spacing="20">
            <!-- Liste des employés disponibles (à gauche) -->
            <VBox alignment="CENTER_LEFT" prefWidth="250" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Employés disponibles:" />
                <ListView fx:id="employesListView" prefHeight="200.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px;" />
            </VBox>

            <!-- Liste des employés sélectionnés (au milieu) -->
            <VBox alignment="CENTER_LEFT" prefWidth="250" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Employés sélectionnés:" />
                <ListView fx:id="employesSelectionnesListView" prefHeight="200.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px;" />
            </VBox>

            <!-- Boutons pour ajouter/supprimer des employés (à droite) -->
            <VBox alignment="CENTER" spacing="10">
                <Button fx:id="ajouterUnButton" onAction="#ajouterUnEmploye" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Ajouter un" />
                <Button fx:id="ajouterTousButton" onAction="#ajouterTousEmployes" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Ajouter tous" />
                <Button fx:id="clearAllButton" onAction="#clearAll" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Tout effacer" />
            </VBox>
        </HBox>

        <!-- Boutons pour confirmer ou annuler -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="confirmerButton" disable="true" onAction="#confirmer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Confirmer" />
            <Button fx:id="annulerButton" onAction="#annuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Annuler" />
        </HBox>
    </VBox>
</AnchorPane>
