<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterEquipeController">

    <!-- Carte blanche pour le formulaire -->
    <VBox alignment="CENTER" layoutX="7.0" layoutY="13.0" prefHeight="480.0" prefWidth="682.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" AnchorPane.bottomAnchor="7.0" AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="13.0">
        <!-- Titre de la fenêtre -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0086b3;" text="Ajouter une nouvelle équipe" />

        <!-- Champ pour le nom de l'équipe -->
        <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="20.0" prefWidth="136.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Nom de l'équipe:" />
            <TextField fx:id="nomEquipeField" prefHeight="29.0" prefWidth="212.0" promptText="Entrez le nom de l'équipe" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px; -fx-padding: 5;" />
        </HBox>

        <!-- Conteneur principal pour les ListView et les boutons -->
        <HBox alignment="CENTER" prefHeight="209.0" prefWidth="602.0" spacing="20">
            <!-- Conteneur pour les ListView -->
            <VBox prefHeight="216.0" prefWidth="433.0" spacing="10">
                <!-- Liste des employés disponibles -->
                <Label prefHeight="20.0" prefWidth="194.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Sélectionnez les employés:" />
                <ListView fx:id="employesListView" prefHeight="176.0" prefWidth="433.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px;">
                    <!-- Les éléments de la liste seront chargés dynamiquement dans le contrôleur -->
                </ListView>

                <!-- Liste des employés sélectionnés -->
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Employés sélectionnés:" />
                <ListView fx:id="employesSelectionnesListView" prefHeight="177.0" prefWidth="433.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px;">
                    <!-- Les éléments de la liste seront chargés dynamiquement dans le contrôleur -->
                </ListView>
            </VBox>

            <!-- Conteneur pour les boutons -->
            <VBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="ajouterUnButton" onAction="#ajouterUnEmploye" prefHeight="27.0" prefWidth="135.0" style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Ajouter un employé" />
                <Button fx:id="ajouterTousButton" onAction="#ajouterTousEmployes" prefHeight="27.0" prefWidth="133.0" style="-fx-background-color: #1ce0c2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Ajouter tous" />
                <Button fx:id="clearAllButton" onAction="#clearAll" prefHeight="27.0" prefWidth="134.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Tout effacer" />
            </VBox>
        </HBox>

        <!-- Boutons pour confirmer ou annuler -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="confirmerButton" disable="true" onAction="#confirmer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Confirmer" />
            <Button fx:id="annulerButton" onAction="#annuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Annuler" />
        </HBox>
    </VBox>

</AnchorPane>
