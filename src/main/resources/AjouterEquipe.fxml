<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterEquipeController">
    <stylesheets>
        <URL value="@Equipe.css" />
    </stylesheets>

    <!-- Carte blanche pour le formulaire -->
    <VBox alignment="TOP_CENTER" spacing="20" styleClass="vbox" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

    <!-- Titre de la fenêtre -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0086b3;" text="Ajouter une nouvelle équipe" />

        <!-- Nom de l'équipe -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Nom de l'équipe:" />
            <TextField fx:id="nomEquipeField" promptText="Entrez le nom de l'équipe" />
        </VBox>


        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Image de l'équipe:" />
            <HBox alignment="CENTER_LEFT" spacing="15">
                <!-- Conteneur cliquable pour choisir une image -->
                <StackPane fx:id="uploadImageButton" onMouseClicked="#uploadImage" style="-fx-border-color: #bdc3c7; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-cursor: hand;">
                    <ImageView fx:id="imagePreview" fitHeight="120" fitWidth="120">
                  <image>
                     <Image url="@/images/empty.jpg" />
                  </image></ImageView>
                </StackPane>
            </HBox>
        </VBox>



        <!-- Conteneur pour les ListView et les boutons -->
        <HBox alignment="CENTER" spacing="30">
            <!-- Liste des employés disponibles (à gauche) -->
            <VBox alignment="CENTER_LEFT" prefWidth="250" spacing="10">
                <VBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Employés disponibles:" />
                    <ListView fx:id="employesListView" />
                </VBox>
            </VBox>

            <!-- Liste des employés sélectionnés (au milieu) -->
            <VBox alignment="CENTER_LEFT" prefWidth="250" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Employés sélectionnés:" />
                <ListView fx:id="employesSelectionnesListView" prefHeight="200.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #0086b3; -fx-border-width: 1px;" />
            </VBox>

            <!-- Boutons d'action -->
            <VBox alignment="CENTER" prefHeight="219.0" prefWidth="216.0" spacing="10">
                <Button fx:id="ajouterUnButton" onAction="#ajouterUnEmploye" prefHeight="27.0" prefWidth="156.0" text="Ajouter  employé" />
                <Button fx:id="ajouterTousButton" onAction="#ajouterTousEmployes" prefHeight="27.0" prefWidth="154.0" text="Ajouter tous" />
                <Button fx:id="supprimerUnButton" onAction="#supprimerUnEmploye" prefHeight="27.0" prefWidth="155.0" text="Supprimer employé" />
                <Button fx:id="clearAllButton" onAction="#clearAll" prefHeight="27.0" prefWidth="156.0" text="Tout effacer" />
            </VBox>


        </HBox>

        <!-- Boutons pour confirmer ou annuler -->
        <!-- Boutons de confirmation -->
        <HBox alignment="CENTER" spacing="20">

            <Button fx:id="confirmerButton" disable="true" onAction="#confirmer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 10;" text="Confirmer" />
        </HBox>
    </VBox>
</AnchorPane>
