<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.JitsiMeetController">
    <!-- Champ pour le nom de la salle -->
    <TextField fx:id="roomNameField" layoutX="235.0" layoutY="122.0" prefWidth="200" promptText="Nom de la réunion" />

    <!-- Champ pour le nom de l'utilisateur -->
    <TextField fx:id="userNameField" layoutX="235.0" layoutY="174.0" prefWidth="200" promptText="Votre nom" />

    <!-- Case à cocher pour couper le micro au démarrage -->
    <CheckBox fx:id="muteCheckBox" layoutX="246.0" layoutY="219.0" text="Couper le micro" />

    <!-- Bouton pour rejoindre la réunion -->
    <Button layoutX="278.0" layoutY="267.0" onAction="#startMeeting" text="Créer" />
   <Label layoutX="252.0" layoutY="30.0" text="Créer un meet" textFill="#247cac">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
   <Label layoutX="80.0" layoutY="121.0" text="Nom de la réunion:">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Label>
   <Label layoutX="87.0" layoutY="177.0" text="Nom et prénom:">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Label>

</AnchorPane>
