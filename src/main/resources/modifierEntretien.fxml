<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1000" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/17.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.ModifierEntretienController">

    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="80.0" spacing="20"
              style="-fx-padding: 20; -fx-background-radius: 10; -fx-background-color: white;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

            <Label text="📝 Modifier un Entretien" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <HBox spacing="15">
                <Label text="📄 Titre :" />
                <TextField fx:id="tf_titre" promptText="Entrez le titre" />
            </HBox>

            <HBox spacing="15">
                <Label text="📃 Description :" />
                <TextField fx:id="tf_description" promptText="Entrez une description" />
            </HBox>

            <HBox spacing="15">
                <Label text="📅 Date Entretien :" />
                <DatePicker fx:id="dp_date_entretien" />
            </HBox>

            <HBox spacing="15">
                <Label text="⏰ Heure Entretien :" />
                <Spinner fx:id="sp_heure_entretien" editable="true" />
            </HBox>

            <HBox spacing="15">
                <Label text="📋 Type Entretien :" />
                <ComboBox fx:id="cb_type_entretien" promptText="Sélectionnez un type" />
            </HBox>

            <HBox spacing="15">
                <Label text="✅ Statut :" />
                <CheckBox fx:id="cb_status" text="Terminé" />
            </HBox>

            <HBox spacing="30">
                <Button fx:id="btnModifier" onAction="#modifierEntretien" text="✔ Modifier"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" />
                <Button onAction="#fermerFenetre" text="❌ Annuler"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" />
            </HBox>
        </VBox>
    </children>

</AnchorPane>
