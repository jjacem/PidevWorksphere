<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.ModifierFeedback"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #4a90e2, #6a11cb);">


    <children>
        <VBox alignment="CENTER" layoutX="41.0" layoutY="28.0" prefHeight="355.0" prefWidth="530.0" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; -fx-padding: 20;">
            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Modifier un Feedback" />

            <!-- Message Input -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Message :" />
                <TextArea fx:id="tf_message" promptText="Entrez votre feedback" style="-fx-pref-width: 300px; -fx-pref-height: 100px; -fx-font-size: 14px; -fx-background-radius: 5;" />
            </HBox>

            <!-- Rate Input -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Note :" />
                <Spinner fx:id="sp_rate" editable="true" style="-fx-font-size: 14px; -fx-background-radius: 5;" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnModifierFeedback" onAction="#modifierFeedback" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Modifier Feedback" />
                <Button onAction="#fermerFenetre" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Annuler" />
            </HBox>
        </VBox>
    </children>

</AnchorPane>
