<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.ModifierEquipeController">

    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Titre de la fenêtre -->

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0086b3;" text="Modifier une équipe" />
        <!-- Champ pour le nom de l'équipe -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Nom de l'équipe:" />
            <TextField fx:id="nomEquipeField" prefWidth="200" promptText="Entrez le nom de l'équipe" />
        </HBox>

        <!-- Conteneur principal pour les ListView et les boutons -->
        <HBox alignment="CENTER" spacing="20">
            <!-- Conteneur pour les ListView -->
            <VBox spacing="10">
                <!-- Liste des employés disponibles -->
                <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Sélectionnez les employés:" />
                <ListView fx:id="employesListView" prefHeight="150" prefWidth="300">
                    <!-- Les éléments de la liste seront chargés dynamiquement dans le contrôleur -->
                </ListView>

                <!-- Liste des employés sélectionnés -->
                <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Employés sélectionnés:" />
                <ListView fx:id="employesSelectionnesListView" prefHeight="150" prefWidth="300">
                    <!-- Les éléments de la liste seront chargés dynamiquement dans le contrôleur -->
                </ListView>
            </VBox>

            <!-- Conteneur pour les boutons -->
            <VBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="ajouterTousButton" onAction="#ajouterTousEmployes" prefHeight="25.0" prefWidth="144.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter tous" />
                <Button fx:id="ajouterUnButton" onAction="#ajouterUnEmploye" prefHeight="25.0" prefWidth="144.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter un employé" />
                <Button fx:id="supprimerUnButton" onAction="#supprimerUnEmploye" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" text="Supprimer un employé" />
                <Button fx:id="clearAllButton" onAction="#clearAll" prefHeight="25.0" prefWidth="146.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Tout effacer" />
            </VBox>
        </HBox>

        <!-- Boutons pour confirmer ou annuler -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="confirmerButton" disable="true" onAction="#confirmer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirmer" />
            <Button fx:id="annulerButton" onAction="#annuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Annuler" />
        </HBox>
    </VBox>

</AnchorPane>
