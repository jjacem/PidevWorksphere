<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterProjetController">
    <!-- Bouton de Retour en Haut à Gauche -->
    <Button fx:id="retourButton" onAction="#Retour" style="-fx-background-color: transparent; -fx-text-fill: #0086b3; -fx-font-size: 14; -fx-font-weight: bold; -fx-cursor: hand;" text="← Retour">
    </Button>


    <!-- Carte Blanche pour le Formulaire -->
    <VBox alignment="CENTER" layoutX="239.0" layoutY="57.0" prefHeight="388.0" prefWidth="475.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0086b3;" text="Ajouter un Projet" />

        <!-- Image du Projet -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Image du Projet:" />
            <Button onAction="#uploadImage" style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" text="Télécharger une image" />
            <ImageView fx:id="imagePreview" fitHeight="50" fitWidth="50" preserveRatio="true" />
        </HBox>

        <!-- Nom du Projet -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Nom du Projet:" />
            <TextField fx:id="nomField" promptText="Entrez le nom du projet" style="-fx-pref-width: 300;" />
        </HBox>

        <!-- Description du Projet -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Description:" />
            <TextArea fx:id="descriptionField" promptText="Entrez la description du projet" style="-fx-pref-width: 300; -fx-pref-height: 100; " />
        </HBox>

        <!-- Date de Création -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Date de Création:" />
            <DatePicker fx:id="dateCreationPicker" style="-fx-pref-width: 300; " />
        </HBox>

        <!-- Deadline -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Deadline:" />
            <DatePicker fx:id="deadlinePicker" style="-fx-pref-width: 300; " />
        </HBox>

        <!-- État du Projet -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="État du Projet:" />
            <ComboBox fx:id="etatComboBox" style="-fx-pref-width: 300; " />
        </HBox>

        <!-- Équipe -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="120" style="-fx-font-size: 14; -fx-text-fill: #555;" text="Équipe:" />
            <ComboBox fx:id="equipeComboBox" style="-fx-pref-width: 300;" />
        </HBox>

        <!-- Bouton Ajouter -->
        <Button onAction="#AjouterProjet" style="-fx-background-color: #0086b3; -fx-text-fill: white; -fx-font-size: 14; -fx-pref-width: 120; -fx-padding: 10; -fx-background-radius: 5;" text="Ajouter" />
    </VBox>
    <AnchorPane.topAnchor>20</AnchorPane.topAnchor>
    <AnchorPane.leftAnchor>20</AnchorPane.leftAnchor>
</AnchorPane>
