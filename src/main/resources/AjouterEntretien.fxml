<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="427.0" prefWidth="368.0" style="-fx-background-color: #f4f4f4; border-radius: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterEntretineController">

    <children>
        <VBox alignment="CENTER" layoutX="-8.0" layoutY="2.0" prefHeight="418.0" prefWidth="376.0" spacing="10" style="-fx-padding: 15; -fx-background-radius: 8; -fx-background-color: white;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="📖 Ajouter un Entretien" />

            <HBox spacing="10">
                <Label text="📄 Titre :" />
                <TextField fx:id="tf_titre" prefWidth="180" promptText="Entrez le titre" />
            </HBox>

            <HBox spacing="10">
                <Label text="📃 Description :" />
                <TextField fx:id="tf_description" prefWidth="180" promptText="Entrez une description" />
            </HBox>

            <HBox spacing="10">
                <Label text="📅 Date Entretien :" />
                <DatePicker fx:id="dp_date_entretien" prefWidth="180" />
            </HBox>

            <HBox spacing="10">
                <Label text="⏰ Heure Entretien :" />
                <Spinner fx:id="sp_heure_entretien" editable="true" prefWidth="120" />
            </HBox>

            <HBox spacing="10">
                <Label text="📋 Type Entretien :" />
                <ComboBox fx:id="cb_type_entretien" prefWidth="180" promptText="Sélectionnez un type" />
            </HBox>

            <HBox spacing="10">
                <Label text="💼 Offre :" />
                <ComboBox fx:id="cb_offre" prefWidth="180" promptText="Sélectionnez une offre" />
            </HBox>

            <HBox spacing="10">
                <Label text="🧑‍💼 Employé :" />
                <ComboBox fx:id="cb_employe" prefWidth="180" promptText="Sélectionnez un employé" />
            </HBox>

            <HBox spacing="10">
                <Label text="👤 Candidat :" />
                <ComboBox fx:id="cb_candidat" prefWidth="180" promptText="Sélectionnez un candidat" />
            </HBox>



            <HBox spacing="15">
                <Button fx:id="btnAjouter" onAction="#ajouterEntretien" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;" text="📝 Ajouter" />
                <Button onAction="#fermerFenetre" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;" text="❌ Annuler" />
            </HBox>
        </VBox>
    </children>

</AnchorPane>
