<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="1500.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AffichageEntretineController"
            style="-fx-background-color: #F5F5F5;">

    <children>

        <Label text="Liste des Entretiens"
               layoutX="50.0" layoutY="20.0"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

        <ListView fx:id="lv_entretien" layoutX="50.0" layoutY="70.0"
                  prefHeight="350.0" prefWidth="1400.0"
                  style="-fx-border-color: #D1D1D1; -fx-border-radius: 8px;
                         -fx-background-radius: 8px; -fx-padding: 10px;
                         -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 5, 0, 0);"/>

        <Button fx:id="btn_ajouter" text="➕ Ajouter un Entretien"
                layoutX="50.0" layoutY="440.0"
                prefWidth="200.0" prefHeight="40.0"
                style="-fx-background-color: #3498DB; -fx-text-fill: white;
                       -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-radius: 20px; -fx-cursor: hand;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 5, 0, 0);"
                onAction="#ajouterEntretien"/>

        <!-- Optional: Footer Label -->
        <Label text="© 2025 app RH management"
               layoutX="1200.0" layoutY="470.0"
               style="-fx-font-size: 12px; -fx-text-fill: #7F8C8D;"/>

    </children>
</AnchorPane>

